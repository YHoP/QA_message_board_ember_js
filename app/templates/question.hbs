<div class="col-md-6">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h2 class="panel-title">{{model.subject}} &emsp; by {{model.user}}</h2>
    </div>
    <div class="panel-body">
      <h5>{{model.content}}</h5>

      <p>Posted on {{model.date_added}}</p>

      {{edit-question question=model editQuestion="editQuestion"}}
    </div>
  </div>

<h2>Answers</h2>
<br>
{{new-answer saveAnswer="saveAnswer" question=model}}
<br>
{{answer-detail editAnswer="editAnswer" question=model}}


</div>

<div class="col-md-6">
  {{google-map question=model}}
</div>
