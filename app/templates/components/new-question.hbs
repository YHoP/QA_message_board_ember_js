{{#if addNewQuestion}}
<h3>New Question</h3>
<div>
  <form>
    <div class="form-group">
      <label class="col-md-2" for="user">User</label>
      {{input value=user id="user"}}
    </div>

    <div class="form-group">
      <label class="col-md-2" for="subject">Subject</label>
      {{input value=subject id="subject"}}
    </div>

    <!-- <div class="form-group">
      <label class="col-md-2" for="text">Location</label>
      {{input value=location id="location"}}
    </div> -->

    <div class="form-group">
      <label class="col-md-2" for="latitude">Latitude</label>
      {{input value=latitude id="latitude"}}
    </div>

    <div class="form-group">
      <label class="col-md-2" for="longitude">Longitude</label>
      {{input value=longitude id="longitude"}}
    </div>


    <div class="form-group">
      <label class="col-md-2" for="text">Question</label>
      {{textarea value=content id="content"}}
    </div>

    <button class="btn btn-success" {{action 'saveQuestion' post}}>Save</button>
  </form>
</div>

{{else}}
<button class="btn btn-info" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
